<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_height="match_parent"
    tools:context=".MagazineDetailsByPublisherActivity">
    <include layout="@layout/toolbar"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_height="wrap_content">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="@dimen/marginplus2"
                android:background="@color/white"
                android:layout_marginBottom="@dimen/marginplus16"
                android:layout_marginRight="@dimen/marginplus2"
                android:layout_marginLeft="@dimen/marginplus2">


                    <ImageView
                        android:id="@+id/slider"
                        android:layout_width="fill_parent"
                        android:layout_height="320dp"
                        />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_bookdetail_name"
                        android:text="Magazine Name"
                        android:textSize="@dimen/textsizemlarge"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/marginplus3"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/tv_bookAuthor"
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Editor:"
                        android:textColor="@color/grey"
                        android:textSize="@dimen/textsizesmall"
 />
                    <TextView
                        android:id="@+id/tv_bookAuthorname"
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Editor:"
                        android:gravity="center"
                        android:singleLine="true"
                        android:maxLines="1"
                        android:textColor="@color/black"
                        android:textSize="@dimen/textsizesmall"
 />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/marginplus3"

                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/tv_publisher"
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Publisher Name:"
                        android:gravity="center"
                        android:textColor="@color/grey"

                        android:textSize="@dimen/textsizesmall"
 />
                    <TextView
                        android:id="@+id/tv_publishername"
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="publishername"
                        android:singleLine="true"
                        android:maxLines="1"
                        android:gravity="center"
                        android:textColor="@color/black"
                        android:textSize="@dimen/textsizesmall"
 />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/marginplus3"

                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/tv_bookIsbn"
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ISBN No:"
                        android:gravity="center"
                        android:textColor="@color/grey"

                        android:textSize="@dimen/textsizesmall"
 />
                    <TextView
                        android:id="@+id/tv_bookisnbnno"
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="isbnnum"
                        android:singleLine="true"
                        android:maxLines="1"
                        android:gravity="center"
                        android:textColor="@color/black"
                        android:textSize="@dimen/textsizesmall"
 />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/marginplus3"

                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/tv_category"
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Category:"
                        android:gravity="center"
                        android:textColor="@color/grey"

                        android:textSize="@dimen/textsizesmall"
 />
                    <TextView
                        android:id="@+id/tv_categoryname"
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="category"
                        android:singleLine="true"
                        android:maxLines="1"
                        android:gravity="center"
                        android:textColor="@color/black"
                        android:textSize="@dimen/textsizesmall"
 />

                </LinearLayout>

                <LinearLayout
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/tv_quantity"
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Quantity:"
                        android:gravity="center"
                        android:textColor="@color/black"
                        android:textStyle="bold"

                        android:textSize="@dimen/textsizesmall"

                        android:layout_marginTop="1dp" />
                    <TextView
                        android:id="@+id/tv_quantitys"
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:singleLine="true"
                        android:maxLines="1"
                        android:gravity="center"
                        android:textColor="@color/black"
                        android:textSize="@dimen/textsizesmall"

                        android:layout_marginTop="1dp" />

                </LinearLayout>
                <TextView
                    android:text="Magazine Discription:"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/marginplus2"
                    android:textSize="@dimen/textsizesmall"
                    />

                <TextView
                    android:id="@+id/tv_description"
                    android:textColor="@color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/textsizesmall"

                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <Button
                        android:visibility="gone"
                        android:id="@+id/btn_update"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Update"
                        android:background="#008000"
                        android:drawableLeft="@drawable/setting"
                        android:drawableTint="@color/white"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        />


                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

        <Button
            android:visibility="visible"
            android:id="@+id/btn_delete"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Delete"
            android:layout_alignParentBottom="true"
            android:background="@color/purple"
            android:textSize="@dimen/textsizemedium"
            android:textColor="@color/white"/>
    </RelativeLayout>
</LinearLayout>