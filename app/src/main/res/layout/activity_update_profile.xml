<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F3F1F1"
    tools:context=".UpdateProfileActivity">
    <include layout="@layout/toolbar"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout

            android:layout_width="320dp"
            android:layout_marginTop="@dimen/marginplus17"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:background="@drawable/boarder3"
            android:layout_marginBottom="@dimen/marginplus10"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="310dp"
                android:background="@color/white"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginBottom="@dimen/marginplus2"

                android:layout_marginTop="@dimen/marginplus3"
                android:layout_marginRight="@dimen/marginplus2"
                android:layout_marginLeft="@dimen/marginplus2">



                <EditText
                    android:id="@+id/et_username"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:hint="Your Name"
                    android:gravity="center"
                    android:inputType="text"
                    android:textColor="@color/black"

                    android:textSize="@dimen/textsizemlarge"
                    />


            </LinearLayout>
            <LinearLayout
                android:visibility="gone"
                android:layout_width="310dp"
                android:background="@color/white"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginBottom="@dimen/marginplus2"
                android:layout_marginRight="@dimen/marginplus2"
                android:layout_marginLeft="@dimen/marginplus2">

                <EditText
                    android:id="@+id/et_phonenumber"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:hint="Phone Number"
                    android:textColor="@color/black"
                    android:gravity="center"

                    android:inputType="text"
                    android:textSize="@dimen/textsizemlarge"
                    />


            </LinearLayout>
            <LinearLayout
                android:visibility="gone"
                android:layout_width="310dp"
                android:background="@color/white"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginBottom="@dimen/marginplus2"
                android:layout_marginRight="@dimen/marginplus2"
                android:layout_marginLeft="@dimen/marginplus2">


                <EditText
                    android:id="@+id/et_email"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:gravity="center"
                    android:hint="Your email"
                    android:textColor="@color/black"
                    android:inputType="text"
                    android:textSize="@dimen/textsizemlarge"
                    />

            </LinearLayout>
            <LinearLayout
                android:layout_width="310dp"
                android:background="@color/white"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginBottom="@dimen/marginplus2"
                android:layout_marginRight="@dimen/marginplus2"
                android:layout_marginLeft="@dimen/marginplus2">


                <EditText
                    android:id="@+id/et_password"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:hint="Password"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:inputType="textPassword"
                    android:textSize="@dimen/textsizemlarge"
                    />


            </LinearLayout>
            <LinearLayout
                android:layout_width="310dp"
                android:background="@color/white"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginBottom="@dimen/marginplus2"
                android:layout_marginRight="@dimen/marginplus2"
                android:layout_marginLeft="@dimen/marginplus2">

                <EditText
                    android:id="@+id/et_address"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:hint="Your Address"
                    android:gravity="center"
                    android:textColor="@color/black"
                   android:inputType="text"
                    android:textSize="@dimen/textsizemlarge"
                    />


            </LinearLayout>
            <LinearLayout
                android:visibility="visible"
                android:layout_width="310dp"
                android:background="@color/white"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="@dimen/marginplus2"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginRight="@dimen/marginplus2"
                android:layout_marginLeft="@dimen/marginplus2">


                <EditText
                    android:id="@+id/et_city"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:hint="Your City"
                    android:inputType="text"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:textSize="@dimen/textsizemlarge"
                    />


            </LinearLayout>

                <Spinner
                    android:visibility="gone"
                    android:id="@+id/spn_usertype"
                    android:layout_width="match_parent"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_height="60dp"
                    android:entries="@array/usertype_array"
                    />

            <Button
                android:visibility="visible"
                android:id="@+id/btn_update"
                android:layout_marginTop="10dp"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="Update Profile"
                android:layout_gravity="center"
                android:layout_marginBottom="@dimen/marginplus2"
                android:background="@drawable/boarder4"
                android:textSize="@dimen/textsizemedium"
                android:textColor="@color/white"/>
                </LinearLayout>
    </ScrollView>

    </RelativeLayout>
</LinearLayout>

