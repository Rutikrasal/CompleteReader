<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="4dp"
        android:orientation="vertical"
        android:layout_margin="@dimen/marginplus1">
        <TextView
            android:id="@+id/tv_bookid"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
        <TextView
            android:id="@+id/tv_bookimagelink"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />

        <ImageView
            android:layout_marginLeft="@dimen/marginplus1"
            android:id="@+id/image_book"
            android:layout_width="70dp"
            android:layout_height="75dp"
            android:src="@drawable/pustak_market"
            android:padding="5dp"
            />

        <TextView
            android:id="@+id/tv_bookname"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/marginplus1"
            android:layout_marginTop="5dp"
            android:textColor="@color/black"
            android:text="book name"
            android:singleLine="true"
            android:layout_toRightOf="@+id/image_book"
            android:textStyle="bold"
            android:textSize="@dimen/textsizemedium"

            />
        <TextView
            android:id="@+id/tv_book_quantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:textColor="@color/black"
            android:layout_toRightOf="@+id/tv_bookname"
            android:textSize="@dimen/textsizesmall"
            />


        <TextView
            android:id="@+id/tv_book_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/marginplus8"
            android:layout_marginTop="5dp"
            android:textColor="@color/black"
            android:layout_toRightOf="@+id/tv_book_quantity"
            android:textSize="@dimen/textsizesmall"
            />
        <TextView
            android:id="@+id/tv_sub_total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/marginplus7"
            android:layout_marginTop="5dp"
            android:textColor="@color/black"
            android:layout_toRightOf="@+id/tv_book_price"
            android:textSize="@dimen/textsizesmall"
            />

    </RelativeLayout>

</LinearLayout>