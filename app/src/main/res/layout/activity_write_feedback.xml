<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".WriteFeedbackActivity">
    <include layout="@layout/toolbar"/>
    <TextView
        android:layout_marginTop="@dimen/marginplus5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Feedback"
        android:textSize="@dimen/textsizemextralarge"
        android:textColor="@color/black"
        android:layout_marginLeft="@dimen/marginplus4"
        />
    <EditText
        android:id="@+id/et_feedback"
        android:layout_width="350dp"

        android:layout_height="150dp"
        android:gravity="start"
        android:layout_gravity="center"
        android:textSize="@dimen/textsizemlarge"
        android:textColor="@color/black"
        android:hint="Enter Comments"
        android:background="@drawable/boarder"
        android:layout_marginTop="@dimen/marginplus2"
        />
    <Button
        android:id="@+id/btn_addfedback"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:background="@color/black"
        android:layout_gravity="center"
        android:textColor="@color/white"
        android:text="Submit Feedback"
        android:textStyle="bold"
        android:layout_marginTop="@dimen/marginplus5"/>

</LinearLayout>