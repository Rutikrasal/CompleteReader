<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".EBookDetailsByPublisherActivity">
    <include layout="@layout/toolbar"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@color/white"

        android:layout_height="wrap_content">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:background="@color/white"

            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="@dimen/marginplus2"
                android:layout_marginBottom="@dimen/marginplus16"
                android:background="@color/white"
                android:layout_marginRight="@dimen/marginplus2"
                android:layout_marginLeft="@dimen/marginplus2">

                    <ImageView
                        android:id="@+id/slider"
                        android:layout_width="fill_parent"
                        android:layout_height="320dp"
                        />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_bookdetail_name"
                        android:text="Book Name"
                        android:textSize="@dimen/textsizemlarge"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/marginplus3"

                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/tv_bookAuthor"
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Author:"
                        android:textColor="@color/grey"
                        android:textSize="@dimen/textsizesmall"
/>
                    <TextView
                        android:id="@+id/tv_bookAuthorname"
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Author:"
                        android:gravity="center"
                        android:singleLine="true"
                        android:maxLines="1"
                        android:textColor="@color/black"
                        android:textSize="@dimen/textsizesmall"
 />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/marginplus3"

                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/tv_publishdate"
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Publsh Date:"
                        android:gravity="center"
                        android:textColor="@color/grey"

                        android:textSize="@dimen/textsizesmall"
 />
                    <TextView
                        android:id="@+id/tv_publishdates"
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="date"
                        android:singleLine="true"
                        android:maxLines="1"
                        android:gravity="center"
                        android:textColor="@color/black"
                        android:textSize="@dimen/textsizesmall"
 />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/marginplus3"

                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/tv_bookfile"
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="E-Book File:"
                        android:gravity="center"
                        android:textColor="@color/grey"

                        android:textSize="@dimen/textsizesmall"
 />
                    <TextView
                        android:id="@+id/tv_bookfiles"
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:maxLines="1"
                        android:gravity="center"
                        android:textColor="@color/blue"
                        android:textSize="@dimen/textsizesmall"
 />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/marginplus3"

                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/tv_category"
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Category:"
                        android:gravity="center"
                        android:textColor="@color/grey"

                        android:textSize="@dimen/textsizesmall"
 />
                    <TextView
                        android:id="@+id/tv_categoryname"
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="category"
                        android:singleLine="true"
                        android:maxLines="1"
                        android:gravity="center"
                        android:textColor="@color/black"
                        android:textSize="@dimen/textsizesmall"
 />

                </LinearLayout>

                <LinearLayout
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/tv_quantity"
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Quantity:"
                        android:gravity="center"
                        android:textColor="@color/black"
                        android:textStyle="bold"

                        android:textSize="@dimen/textsizesmall"
/>
                    <TextView
                        android:id="@+id/tv_quantitys"
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:singleLine="true"
                        android:maxLines="1"
                        android:gravity="center"
                        android:textColor="@color/black"
                        android:textSize="@dimen/textsizesmall"
 />

                </LinearLayout>
                <TextView
                    android:text="E-Book Discription:"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/marginplus2"
                    android:textSize="@dimen/textsizesmall"
                    />

                <TextView
                    android:id="@+id/tv_description"
                    android:textColor="@color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/textsizesmall"

                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">


                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
        <Button
            android:visibility="visible"
            android:id="@+id/btn_update"
            android:layout_marginTop="10dp"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Update"
            android:layout_alignParentBottom="true"
            android:background="#008000"
            android:textSize="@dimen/textsizemedium"
            android:textColor="@color/white"/>
    <Button
        android:visibility="visible"
        android:id="@+id/btn_delete"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@id/btn_update"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Delete"
        android:layout_alignParentBottom="true"
        android:background="@color/purple"
        android:textSize="@dimen/textsizemedium"
        android:textColor="@color/white"/>
    </RelativeLayout>
</LinearLayout>