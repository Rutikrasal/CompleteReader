<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F3F1F1"
    android:orientation="vertical"
    tools:context=".LoginActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"

            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_marginTop="@dimen/marginplus10"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Welcome"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_gravity="center"
                android:gravity="center"
                android:textSize="@dimen/large"
                />
        <LinearLayout
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/marginplus10"
            android:background="@drawable/boarder3"
            android:gravity="center"
            android:orientation="vertical">
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="@dimen/marginplus2"
                android:layout_marginBottom="@dimen/marginplus2"
                android:gravity="center"
                android:layout_marginRight="@dimen/marginplus2"
                android:layout_marginLeft="@dimen/marginplus2">


                    <EditText
                        android:id="@+id/et_username"
                        android:layout_width="300dp"
                        android:layout_height="50dp"
                        android:textColor="@color/black"
                        android:hint="Your Email Id"
                        android:inputType="text"
                        android:textSize="@dimen/textsizesmall"
                        />


            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="@dimen/marginplus2"
                android:gravity="center"
                android:layout_marginBottom="@dimen/marginplus2"
                android:layout_marginRight="@dimen/marginplus2"
                android:layout_marginLeft="@dimen/marginplus2">


                <EditText
                        android:id="@+id/et_password"
                    android:layout_width="300dp"
                    android:layout_height="50dp"
                    android:hint="Password"
                        android:inputType="textPassword"
                    android:textColor="@color/black"
                    android:textSize="@dimen/textsizesmall"
                    />


            </LinearLayout>

            <TextView
                android:id="@+id/tv_forgot_pass"
                android:text="Forgot Password ?"
                android:textColor="@color/purple"
                android:textSize="@dimen/textsizesmall"
                android:textAlignment="textEnd"
                android:layout_marginRight="@dimen/marginplus2"
                android:layout_marginBottom="@dimen/marginplus2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="end" />
            <Button
                android:id="@+id/btn_login"
                android:layout_width="180dp"
                android:layout_height="50dp"
                android:text="Login"
                android:textSize="@dimen/textsizemextralarge"
                android:textAllCaps="false"
                android:textStyle="bold"
                android:textColor="@color/colorPrimary"
                android:background="@drawable/boarder4"
                android:layout_marginTop="@dimen/marginplus3"
                android:layout_gravity="center"
                android:layout_marginBottom="@dimen/marginplus2"/>


            <TextView
                android:id="@+id/tv_new_account"
                android:text="Don't have an account?Register now "
                android:textColor="@color/black"
                android:gravity="center"
                android:textSize="@dimen/textsizesmall"
                android:layout_marginRight="@dimen/marginplus2"
                android:layout_marginBottom="@dimen/marginplus5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <Button
                android:id="@+id/btn_skip"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:text="Skip"
                android:textSize="@dimen/textsizemextralarge"
                android:textAllCaps="false"
                android:textStyle="bold"
                android:textColor="@color/purple"
                android:background="@drawable/boarder5"
                android:layout_gravity="center"
                android:layout_marginBottom="@dimen/marginplus2"/>
        </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>