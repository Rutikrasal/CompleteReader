<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F3F1F1"
    tools:context=".AddReviewActivity">
    <include layout="@layout/toolbar"/>
    <TextView
        android:layout_marginTop="@dimen/marginplus5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Comments"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_gravity="center"
        android:gravity="center"
        android:textSize="@dimen/large"

        />

    <LinearLayout
        android:layout_width="330dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/marginplus10"
        android:background="@drawable/boarder3"
        android:gravity="center"
        android:orientation="vertical">
    <EditText
        android:id="@+id/et_review"
        android:layout_width="300dp"

        android:layout_height="150dp"
        android:gravity="start"
        android:layout_gravity="center"
        android:textSize="@dimen/textsizemlarge"
        android:textColor="@color/black"
        android:hint="Enter Comments"
        android:layout_marginTop="@dimen/marginplus2"
        />
    <Button
        android:id="@+id/btn_addreview"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:background="@color/black"
        android:layout_gravity="center"
        android:textColor="@color/white"
        android:text="Submit Review"
        android:textStyle="bold"
        android:layout_marginTop="@dimen/marginplus5"/>
    </LinearLayout>
</LinearLayout>