<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    android:background="#28DDDADA"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/white"
        android:layout_marginTop="@dimen/marginplus1"
        android:layout_marginBottom="@dimen/marginplus1"
        android:gravity="center"
        android:layout_gravity="center"
        >
    <TextView
        android:id="@+id/tv_categoryname"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:textSize="@dimen/textsizemedium"
        android:textStyle="bold"
        android:background="@color/white"
        android:gravity="center"
        android:text="category"
        android:layout_marginLeft="@dimen/marginplus5"
        android:drawableRight="@drawable/next"
        android:drawableTint="@color/grey"

        />
    <TextView
        android:visibility="gone"
        android:id="@+id/tv_categoryid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/textsizemedium"
        android:textStyle="bold"
        android:textColor="@color/black"
        />
    <TextView
        android:visibility="gone"
        android:id="@+id/tv_categorydescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/textsizemedium"
        android:textStyle="bold"
        android:textColor="@color/black"
        />
    <TextView
        android:visibility="gone"
        android:id="@+id/tv_categorytag"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/textsizemedium"
        android:textStyle="bold"
        android:textColor="@color/black"
        />
    </LinearLayout>
</LinearLayout>